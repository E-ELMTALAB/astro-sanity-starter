---
import { Image } from 'astro:assets';

interface Props {
    _id?: string;
    src: string;
    width: number;
    height: number;
    alt?: string;
    class?: string;
    'data-sb-field-path'?: string;
}

const { _id, src, width, height, alt, class: className, 'data-sb-field-path': fieldPath } = Astro.props;

// Use placeholder as fallback if src is not provided
const imageSrc = src || '/placeholder.svg';
const format = imageSrc?.includes('.svg') ? 'svg' : 'webp';
const annotations: { [key: string]: string } = {};
if (_id) {
    annotations['data-sb-object-id'] = _id;
} else if (fieldPath) {
    annotations['data-sb-field-path'] = fieldPath;
}
---

<Image src={imageSrc} width={width} height={height} alt={alt || ''} format={format} class:list={className} {...annotations} />
