---
import type { ProductCardItem } from 'types';
import { buildCheckoutUrl } from '@utils/telegram-shop';

interface Props extends ProductCardItem {
    class?: string;
    'data-sb-field-path'?: string;
}

const {
    image,
    name,
    description,
    rating,
    category,
    price,
    url,
    productSlug,
    variantSku,
    class: className,
    'data-sb-field-path': fieldPath
} = Astro.props;

const checkoutHref = buildCheckoutUrl(productSlug, variantSku);
const href = checkoutHref ?? url ?? undefined;
---

<div class:list={["group", "bg-card rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow cursor-pointer", className]} data-sb-field-path={fieldPath}>
    <a href={href} class="block" data-sb-field-path={fieldPath ? '.productSlug' : undefined}>
        <div class="aspect-square bg-muted relative overflow-hidden" data-sb-field-path={fieldPath ? '.image' : undefined}>
            {image?.src ? (
                <img src={image.src} alt={image.alt} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" data-sb-object-id={image._id} />
            ) : null}
        </div>
        <div class="p-4 space-y-3">
            <div class="space-y-1">
                <h3 class="font-semibold text-lg" data-sb-field-path={fieldPath ? '.name' : undefined}>{name}</h3>
                {description && <p class="text-sm text-muted-foreground line-clamp-2" data-sb-field-path={fieldPath ? '.description' : undefined}>{description}</p>}
            </div>
            <div class="flex items-center gap-2">
                {typeof rating === 'number' && (
                    <div class="flex items-center gap-1" data-sb-field-path={fieldPath ? '.rating' : undefined}>
                        <span class="inline-flex w-4 h-4 rounded-full bg-yellow-400" />
                        <span class="text-sm font-medium">{rating}</span>
                    </div>
                )}
                {category && <span class="text-xs" data-sb-field-path={fieldPath ? '.category' : undefined}>{category}</span>}
            </div>
            <div class="flex items-center justify-between">
                {typeof price === 'number' && <span class="text-2xl font-bold text-primary" data-sb-field-path={fieldPath ? '.price' : undefined}>${price}</span>}
            </div>
            {productSlug && <span class="hidden" aria-hidden="true" data-sb-field-path={fieldPath ? '.productSlug' : undefined}>{productSlug}</span>}
            {variantSku && <span class="hidden" aria-hidden="true" data-sb-field-path={fieldPath ? '.variantSku' : undefined}>{variantSku}</span>}
            {url && !checkoutHref && <span class="hidden" aria-hidden="true" data-sb-field-path={fieldPath ? '.url' : undefined}>{url}</span>}
        </div>
    </a>
</div>



